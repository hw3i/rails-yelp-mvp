<!DOCTYPE html>
<html>
  <head>
    <title>Fake Rails Yelp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
  <div class="navbar-wagon">
  <!-- Logo -->
    <%= link_to restaurants_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "Yelp_Logo.png" %>
    <% end %>

    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Search form -->
    <form action="/restaurants" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Search something" name="search">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form>


    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <%= image_tag "Hwei.png", class: "avatar-large dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>


      <!-- Button (call-to-action) -->
      <%= link_to t(new_restaurant_path, default: "Add Restaurant"), "restaurants/new", class: "navbar-wagon-item navbar-wagon-button btn" %>
    </div>
  </div>

    <div class="container">
      <div class="row">
        <div class="column-xs-12">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
