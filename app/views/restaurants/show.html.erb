
<h1><%= @restaurant.name %> - <%= @restaurant.category %></h1>
<p><%= @restaurant.address %></p>
<p><%= "*" * @restaurant.average_rating %></p>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= '*' * review.rating %> - <%= review.content %></li>
  <% end %>
</ul>

<%= link_to 'Edit this restaurant', edit_restaurant_path(@restaurant) %> ||
<%= link_to 'Back to Home', restaurants_path %>
